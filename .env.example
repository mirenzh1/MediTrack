# Supabase Configuration - VITE_ prefix required for frontend access
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
# Service key for backend operations only (not exposed to frontend)
SUPABASE_SERVICE_KEY=

# Application Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ENVIRONMENT=development
DEBUG=True

# Security
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7

# Application Settings
APP_NAME=MedTrack Mobile
APP_VERSION=1.0.0
API_V1_PREFIX=/api/v1

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_DIR=data/imports

# Report Settings
EXPORT_DIR=data/exports
REPORT_RETENTION_DAYS=30

# Email Settings (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@medtrack.app

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090